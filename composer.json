{
    "name": "alazziaz/laravel-dapr-invoker",
    "description": "Expose Laravel actions as Dapr-invokable methods and provide a client helper for Dapr service invocation.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "alazziaz/laravel-dapr-foundation": "self.version",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "dapr/php-sdk": "dev-main"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "AlazziAz\\LaravelDaprInvoker\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AlazziAz\\LaravelDaprInvoker\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlazziAz\\LaravelDaprInvoker\\ServiceProvider"
            ],
            "aliases": {
                "DaprInvoke": "AlazziAz\\Dapr\\Invoker\\Facades\\DaprInvoke"
            }
        }
    },
    "repositories": {
        "dapr-php-sdk": {
            "type": "vcs",
            "url": "https://github.com/dapr/php-sdk"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "pest"
    }
}
